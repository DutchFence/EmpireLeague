
<%- include("partials/home_header"); %>

<section class="fs_section container-fluid justify-content-center spacing_for_nav">
<div class="container-fluid">
<div class="row">

  <div class="col-md-8">
    <h1>Create a new account to join the league!</h1>
    <form class="" action="/register" method="post">
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email address
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"></label>
        <div id="emailHelp" class="form-text">You will have to verify your password with an email</div>
      </div>
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Password
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"></label>
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
      </div>
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Verify password
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"></label>
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
      </div>

      <div class="mb-3 form-check">

        <label class="form-check-label form-text" for="exampleCheck1"><input type="checkbox" class="form-check-input" id="exampleCheck1">Remember my password</label>
      </div>
      <button type="submit" class="btn btn-primary" >Submit</button>
    </form>
  </div>
  <div class="col-sm-4 social_style">
        <a class=" py-2 btn-social btn-google"  role="button" href="/auth/google"><i class="fab fa-google"></i>Sign up with Google</a>
        <br><br>
<a href="/auth/facebook"role="button" class="py-2 btn-social btn-facebook"><i class="fa fa-facebook"></i>Sign up with Facebook</a>
  </div>
</div>
</div>
</section>
